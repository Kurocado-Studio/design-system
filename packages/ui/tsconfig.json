{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@internal/config/tsconfig.web"],
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve"
  },
  "include": [
    "src",
    "tailwind.config.ts",
    "test",
    "tsup.config.ts",
    "vitest.config.ts",
    "setup.web.ts"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
