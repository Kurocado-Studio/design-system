{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@kurocado-studio/qa/web/tsconfig.qa"],
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "node",
      "./src/global.d.ts",
      "@testing-library/jest-dom"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "jsx": "react"
  },
  "include": [
    "src/lib",
    "src/react",
    "src/vue",
    "src/shared",
    "tailwind.config.ts",
    "tsup.config.ts",
    "vitest.config.ts",
    "vite.config.ts",
    "setup.web.ts"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
